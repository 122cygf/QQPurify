<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <CheckBoxPreference
        android:defaultValue="false"
        android:key="prevent_flash_disappear"
        android:summary="无限时查看闪照并且可以截图"
        android:title="防止闪照消失" />
    <CheckBoxPreference
        android:defaultValue="false"
        android:key="prevent_messages_withdrawn"
        android:summary="不会显示撤回提示"
        android:title="防止消息撤回" />
    <CheckBoxPreference
        android:defaultValue="false"
        android:key="simulate_menu"
        android:summary="点击消息列表顶部弹出菜单选项"
        android:title="模拟菜单" />
    <CheckBoxPreference
        android:defaultValue="false"
        android:key="disable_coreservice"
        android:summary="会影响消息的正常接收"
        android:title="禁用 CoreService" />
    <PreferenceCategory android:title="模块设置">
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="checkUpdate_auto"
            android:summary="后台自动检查更新"
            android:title="检查更新" />
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="desktop_icon"
            android:summary="隐藏后可以通过 Xposed 框架打开本模块"
            android:title="隐藏桌面图标" />
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="hook_hotpatch"
            android:summary="如果模块不能用再尝试开启该开关"
            android:title="拦截热修复" />
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="switch_all"
            android:title="关闭所有功能" />
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="switch_log"
            android:summary="开启后可在 Xposed 框架里面查看模块产生的日志"
            android:title="日志开关" />
        <Preference
            android:key="setting_bor"
            android:title="备份/恢复数据" />
    </PreferenceCategory>
</PreferenceScreen>