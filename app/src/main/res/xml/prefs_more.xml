<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <CheckBoxPreference
        android:defaultValue="false"
        android:key="prevent_flash_disappear"
        android:summary="可截图"
        android:title="防止闪照消失" />
    <CheckBoxPreference
        android:defaultValue="false"
        android:key="prevent_messages_withdrawn"
        android:summary="Bug 较多慎重使用"
        android:title="防止消息撤回" />
    <CheckBoxPreference
        android:defaultValue="false"
        android:key="simulate_menu"
        android:summary="点击消息列表顶部弹出菜单选项"
        android:title="模拟菜单" />
    <CheckBoxPreference
        android:defaultValue="false"
        android:key="disable_coreservice"
        android:summary="会影响消息的正常接收"
        android:title="禁用CoreService" />
    <PreferenceCategory android:title="模块设置">
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="desktop_icon"
            android:summary="隐藏后可以通过 Xposed 框架打开本模块"
            android:title="隐藏桌面图标" />
    </PreferenceCategory>
    <PreferenceCategory android:title="其他">
        <Preference
            android:key="setting_qq"
            android:summary="一般用于强行停止 QQ 来确保模块更新内容可以生效"
            android:title="管理 QQ" />
    </PreferenceCategory>
</PreferenceScreen>