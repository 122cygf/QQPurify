<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <SwitchPreference
        android:defaultValue="true"
        android:key="leba_display_tab"
        android:title="显示动态界面" />
    <SwitchPreference
        android:defaultValue="true"
        android:dependency="leba_display_tab"
        android:key="leba_use_older"
        android:title="使用旧版动态" />
    <PreferenceCategory
        android:dependency="leba_use_older"
        android:title="顶部">
        <SwitchPreference
            android:defaultValue="true"
            android:key="leba_hide_hotSearch"
            android:title="隐藏热搜" />
    </PreferenceCategory>
    <PreferenceCategory
        android:dependency="leba_use_older"
        android:title="好友动态">
        <SwitchPreference
            android:defaultValue="true"
            android:key="leba_display_qzoneEntry"
            android:title="显示好友动态入口" />
        <SwitchPreference
            android:dependency="leba_display_qzoneEntry"
            android:key="leba_hide_qzoneRemind"
            android:title="隐藏动态头像提醒" />
    </PreferenceCategory>
    <PreferenceCategory
        android:dependency="leba_use_older"
        android:title="附近的人">
        <SwitchPreference
            android:defaultValue="true"
            android:key="leba_display_nearEntry"
            android:title="显示附近的人入口" />
        <SwitchPreference
            android:dependency="leba_display_nearEntry"
            android:key="leba_hide_nearRemind"
            android:title="隐藏附近头像提醒" />
    </PreferenceCategory>
    <PreferenceCategory
        android:dependency="leba_use_older"
        android:title="兴趣部落">
        <SwitchPreference
            android:defaultValue="true"
            android:key="leba_display_tribalEntry"
            android:title="显示兴趣部落入口" />
        <SwitchPreference
            android:dependency="leba_display_tribalEntry"
            android:key="leba_hide_tribalRemind"
            android:title="隐藏部落头像提醒" />
    </PreferenceCategory>
    <PreferenceCategory
        android:dependency="leba_use_older"
        android:title="底部">
        <SwitchPreference
            android:key="leba_hide_tabNum"
            android:title="隐藏消息数量" />
    </PreferenceCategory>
</PreferenceScreen>